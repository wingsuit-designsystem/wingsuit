{# SETTINGS #}
{% set header_classes = ([
  'header-offset bg-white w-full z-30 top-0 text-white',
  variant == 'fixed'? 'fixed h-18 w-full',
  variant == 'sticky'? 'sticky',
]) | sort | join(' ') | trim %}

{# TEMPLATE #}
<header class="{{ header_classes }}">
  {% embed "@organisms/container/container.twig" with {menu: menu, language_select: language_select} only%}
    {% block content %}
      <div class="flex py-5 justify-between md:flex-row">
        <div class="w-3/6 md:w-2/6 max-w-xs md:max-w-7xl">
          {% include "@atoms/logo/logo.twig" only %}
        </div>
        <div class="block lg:hidden" @click="menuIsOpen = !menuIsOpen">
          {% include "@atoms/hamburger/hamburger.twig" only %}
        </div>
        <div class="w-full flex-grow hidden text-black z-20 mt-2 bg-white absolute lg:static left-6 top-11 w-full lg:flex lg:justify-end lg:items-center lg:w-auto lg:block lg:mt-0 lg:bg-transparent" :class="{'block': menuIsOpen, 'hidden': !menuIsOpen}">
          {{ menu }}
        </div>
        <ul class="list-reset flex justify-end flex-1 items-center mr-8 md:mr-0">
          <li class="mr-4 md:mr-7">{{ language_select }}</li>
        </ul>
      </div>
    {% endblock %}
  {% endembed %}
  {# <hr class="border-b border-gray-100 opacity-25 my-0 py-0"> #}
</header>
