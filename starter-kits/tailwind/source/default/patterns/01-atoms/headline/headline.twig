{# SETTING #}
{% set attributes = attributes|default(create_attribute()) %}
{% set tag_name = tag_name|default('div') %}
{% set spacing_bottom = spacing_bottom|default('default') %}

{%
  set classes = ([
  'headline text-black dark:text-gray-50 font-sans',
  pattern_configuration('headline', variant, 'size'),
  pattern_configuration('headline', variant, 'spacing_bottom')[spacing_bottom],
  classes,
]) | sort | join(' ') | trim
%}

{# TEMPLATES #}
<{{ tag_name }} {{ attributes.addClass(classes) }}>
{{ title_prefix }}
  {{ title_suffix }}
  {{ headline }}
</{{ tag_name }}>
